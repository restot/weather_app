# API Keys for Weather Forecast Application
# Copy this file to .env and fill in your actual values

# Get your Mapbox API key at: https://account.mapbox.com/
MAPBOX_API_KEY=your_mapbox_api_key_here

# Get your OpenWeatherMap API key at: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Rails secret key base (generate with: rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

# Redis URL for caching (used in Docker environment)
REDIS_URL=redis://redis:6379/0

# Cloudflare Tunnel token (get from Cloudflare Zero Trust dashboard)
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# Axiom log shipping (get from axiom.co settings)
AXIOM_TOKEN=your_axiom_api_token_here
AXIOM_DATASET=your_axiom_dataset_name_here

# Quota offsets â€” added to tracked monthly usage (default 0)
# Useful when usage occurred before tracking was enabled
MAPBOX_QUOTA_OFFSET=0
OPENWEATHERMAP_QUOTA_OFFSET=0
